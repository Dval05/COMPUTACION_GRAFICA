using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace P2Act25Nov
{
    public partial class frmCircunferencia : Form
    {
        CCircunferencia objCircunferencia = new CCircunferencia();
        CColorear objColorear = new CColorear();

        //Algoritmo de Bresenham / Algoritmo del Punto Medio
        public frmCircunferencia()
        {
            InitializeComponent();
        }

        

        private void btnCalcular_Click(object sender, EventArgs e)
        {
            if (objCircunferencia.ReadData(txtRadio, picCanvas))
            {
                objCircunferencia.TrazarCircunferencia(picCanvas);
            }
        }

        private void btnResetear_Click(object sender, EventArgs e)
        {
            objCircunferencia.InitializeData(txtRadio, picCanvas);
            // Reinicializar el colorear
            objColorear = new CColorear();
        }

        private void btnSalir_Click(object sender, EventArgs e)
        {
            objCircunferencia.CloseForm(this);
        }

        private async void btnColorear_Click(object sender, EventArgs e)
        {
            // Verificar que se haya dibujado una circunferencia
            if (picCanvas.Image == null)
            {
                MessageBox.Show("Primero debe dibujar una circunferencia", "Advertencia");
                return;
            }

            // Mostrar diálogo de color
            ColorDialog colorDialog = new ColorDialog();
            colorDialog.Color = Color.Yellow; // Color predeterminado

            if (colorDialog.ShowDialog() == DialogResult.OK)
            {
                // Colorear la circunferencia desde el centro usando el método recursivo con animación
                await objCircunferencia.ColorearCircunferencia(picCanvas, colorDialog.Color, objColorear);
            }
        }

        private void label5_Click(object sender, EventArgs e)
        {

        }
    }

}


